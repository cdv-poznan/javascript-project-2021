{
  "trailingComma": "es5",
  "tabWidth": 4,
  "semi": false,
  "singleQuote": true,
  "overrides": [
    {
      "files": "*.js",
      "options": {
        "parser": "babel"
      }
    },
    {
      "files": "*.css",
      "options": {
        "singleQuote": true,
        "printWidth": 140,
        "parser": "css"
      }
    },
    {
      "files": ".html",
      "options": {
        "parser": "html",
        "printWidth": 140,
        "singleQuote": true,
        "htmlWhitespaceSensitivity": "css"
      }
    }
  ]
}
