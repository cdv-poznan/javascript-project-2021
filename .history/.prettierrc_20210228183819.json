{
  "printWidth": 80,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "quoteProps": "consistent",
  "trailingComma": "all",
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "overrides": [
    {
      "files": "*.js",
      "options": {
        "parser": "babel"
      }
    },
    {
      "files": "*.scss",
      "options": {
        "singleQuote": false,
        "printWidth": 140,
        "parser": "scss"
      }
    },
    {
      "files": ".html",
      "options": {
        "parser": "html",
        "printWidth": 140,
        "singleQuote": false,
        "htmlWhitespaceSensitivity": "css"
      }
    }
  ]
}
